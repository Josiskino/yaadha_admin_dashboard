rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Collection OTP - Accès restreint aux Cloud Functions uniquement
    match /otps/{email} {
      allow read, write: if false;
    }
    
    // Collection users - L'utilisateur peut seulement lire/écrire ses propres données
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    
    // Collection admin - Les utilisateurs authentifiés peuvent créer/lire/mettre à jour les documents admin
    match /admin/{adminId} {
      // Permettre aux utilisateurs de créer leur propre document lors de l'inscription
      allow create: if request.auth != null && request.auth.uid == adminId;
      // Permettre aux utilisateurs authentifiés de lire tous les documents admin
      allow read: if request.auth != null;
      // Permettre aux utilisateurs authentifiés de mettre à jour les documents admin (pour l'assignation de rôles)
      allow update: if request.auth != null;
      // Permettre la suppression uniquement pour les utilisateurs authentifiés
      allow delete: if request.auth != null;
    }
    
    // Collection categories - Accessible aux utilisateurs authentifiés
    match /categories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Collection subcategories - Accessible aux utilisateurs authentifiés
    match /subcategories/{subCategoryId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Collection prestations - Accessible aux utilisateurs authentifiés
    match /prestations/{prestationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Interdire tout autre accès par défaut
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
