rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Collection OTP - Access restricted to Cloud Functions only (deny client)
    match /otps/{email} {
      allow read, write: if false;
    }

    // Collection users - A user can only read/write their own data
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Collection categories - TEMPORARY: Open for development (CHANGE IN PRODUCTION!)
    match /categories/{categoryId} {
      allow read, write: if true;
    }

    // Deny any other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
