rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Categories folder - Accessible aux utilisateurs authentifiés
    match /categories/{allPaths=**} {
      allow read: if true; // Lecture publique pour afficher les images
      allow write: if request.auth != null; // Écriture uniquement pour les admins authentifiés
    }
    
    // Subcategories folder - Accessible aux utilisateurs authentifiés
    match /subcategories/{allPaths=**} {
      allow read: if true; // Lecture publique
      allow write: if request.auth != null; // Écriture pour authentifiés
    }
    
    // Prestations folder - Accessible aux utilisateurs authentifiés
    match /prestations/{allPaths=**} {
      allow read: if true; // Lecture publique
      allow write: if request.auth != null; // Écriture pour authentifiés
    }
    
    // Prestataires folder - Pour les photos des prestataires (futures)
    match /prestataires/{userId}/{allPaths=**} {
      allow read: if true; // Lecture publique
      allow write: if request.auth != null && request.auth.uid == userId; // Écriture uniquement par le propriétaire
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
